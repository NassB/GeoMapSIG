<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.nassim.geomapsig"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_nav_header"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ConversionActivity"
            android:label="@string/title_activity_conversion"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".TableauActivity"
            android:label="@string/title_activity_tableau"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>