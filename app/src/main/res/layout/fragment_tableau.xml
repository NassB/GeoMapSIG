<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableauCoordonneesLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:shrinkColumns="*"
    android:stretchColumns="*"
    android:background="#ffffff">

    <TableRow
        android:id="@+id/titreTableauRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/tableauCoordonnees"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="6"
            android:gravity="center"
            android:text="@string/tableau_coordonnees"
            android:textSize="18sp"
            android:textStyle="bold|italic" >
        </TextView>
    </TableRow>

    <TableRow
        android:id="@+id/emptyRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <TextView
            android:layout_span="5">
        </TextView>
    </TableRow>

    <TableRow
        android:id="@+id/villeSexaDeciRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/TextView21"
            android:text="@string/villesCellule"
            android:textStyle="bold"
            android:textSize="14sp"
            android:typeface="serif">
        </TextView>

        <TextView
            android:id="@+id/TextView22"
            android:gravity="center"
            android:text="@string/sexagecimaleTableau"
            android:textStyle="bold"
            android:typeface="serif"
            android:layout_span="2"
            android:textSize="14sp">
        </TextView>

        <TextView
            android:id="@+id/TextView24"
            android:gravity="center"
            android:textStyle="bold"
            android:typeface="serif"
            android:text="@string/decimaleTableau"
            android:layout_span="2"
            android:textSize="14sp">
        </TextView>

    </TableRow>

    <TableRow
        android:id="@+id/latitudeLongitudeRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/TextView50"
            android:textStyle="bold"
            android:textSize="14sp">
        </TextView>

        <TextView
            android:id="@+id/TextView51"
            android:gravity="center"
            android:text="@string/latitudeSexagecimaleTableau"
            android:textStyle="bold"
            android:typeface="serif"
            android:textSize="14sp">
        </TextView>

        <TextView
            android:id="@+id/TextView52"
            android:gravity="center"
            android:text="@string/longitudeSexagecimaleTableau"
            android:textStyle="bold"
            android:typeface="serif"
            android:textSize="14sp">
        </TextView>

        <TextView
            android:id="@+id/TextView53"
            android:gravity="center"
            android:text="@string/latitudeDecimaleTableau"
            android:textStyle="bold"
            android:typeface="serif"
            android:textSize="14sp">
        </TextView>

        <TextView
            android:id="@+id/TextView54"
            android:gravity="center"
            android:text="@string/longitudeDecimaleTableau"
            android:textStyle="bold"
            android:typeface="serif"
            android:textSize="14sp">
        </TextView>

    </TableRow>

    <TableRow
        android:id="@+id/premiereVilleRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView31"
            android:text="Marseille"
            android:textSize="13sp">
        </TextView>

        <TextView
            android:id="@+id/textView32"
            android:gravity="center_horizontal"
            android:text="43° 17′ 47&apos;&apos; N"
            android:textSize="13sp">
        </TextView>

        <TextView
            android:id="@+id/textView33"
            android:gravity="center_horizontal"
            android:text="5° 22′ 12&apos;&apos; E"
            android:textSize="13sp">
        </TextView>

        <TextView
            android:id="@+id/textView34"
            android:gravity="center_horizontal"
            android:text="43.296346°"
            android:textSize="13sp">
        </TextView>

        <TextView
            android:id="@+id/textView35"
            android:gravity="center_horizontal"
            android:text="5.369889°"
            android:textSize="13sp">
        </TextView>

    </TableRow>

    <TableRow
        android:id="@+id/deuxiemeVilleRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView41"
            android:text="Nantes"
            android:textSize="13dp">
        </TextView>

        <TextView
            android:id="@+id/textView42"
            android:gravity="center_horizontal"
            android:text="47° 13&apos; 05&quot; N"
            android:textSize="13dp">
        </TextView>

        <TextView
            android:id="@+id/textView43"
            android:gravity="center_horizontal"
            android:text="1° 33&apos; 10&quot; W"
            android:textSize="13dp">
        </TextView>

        <TextView
            android:id="@+id/textView44"
            android:gravity="center_horizontal"
            android:text="47.21806°"
            android:textSize="13dp">
        </TextView>

        <TextView
            android:id="@+id/textView45"
            android:gravity="center_horizontal"
            android:text="-1.55278°"
            android:textSize="13dp">
        </TextView>

    </TableRow>

</TableLayout>